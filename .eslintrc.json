{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": { "jsx": true }
  },
  "rules": {
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "only-multiline"]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": [
    "react", "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}
